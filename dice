#include <stdio.h>
#include <stdlib.h>
#include <time.h>

//Define header guards
#ifndef DICE_H
#define DICE_H

void diceRoller()
{
    char choice;
    int checker = 0;
    int diceRoll;

    while(checker<1)
    {
    	printf("This is the digital dice please choose if you are a (P)Participant or a (C)Cursed Entity\n");
        printf("Choice: ");
        scanf(" %c", &choice);

        srand(time(NULL)); //initializes the seed by using current time

        if(choice == 'P' || choice == 'p')
        {
            diceRoll = rand() % 4 +1;
            printf("The D-4 die rolled a %d", diceRoll);
            checker++;
        } 

        else if(choice == 'C' || choice == 'c')
        {
            diceRoll = rand() % 6 +1;
            printf("The D-6 die rolled a %d", diceRoll);
            checker++;
        } 

        else
        {
            printf("Incorrect Input!!! Try Again!\n\n");
        }
    }        
}
#endif